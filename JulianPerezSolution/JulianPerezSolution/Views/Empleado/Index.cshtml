@model JulianPerezSolution.Models.EmpleadoListViewModel

@{
    ViewBag.Title = "Empleados";
}

<h2>Empleados</h2>

<p>
    <a href='@Url.Action("Create", "Empleado")' class="btn btn-success">Agregar Empleado</a>
</p>

@using (@Html.BeginForm())
{
    <div class="form-group">
        @Html.EditorFor(model => model.Busqueda, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <button type="submit" class="btn btn-primary">Filtrar</button>
}
<br />
<table class="table">
    <tr>
        <th>
            Codigo
        </th>
        <th>
            Apellido
        </th>
        <th>
            Nombre
        </th>
        <th>
            FechaAlta
        </th>
        <th>
            Tipo Doc.
        </th>
        <th>
            Num Docu.
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Empleados)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaAlta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoDoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumDocumento)
            </td>
            <td>
                <a href='@Url.Action("Edit", "Empleado", new { id = item.Id })' class="btn btn-primary">Editar</a>
                <a href='@Url.Action("Delete", "Empleado", new { id = item.Id })' class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
    }

</table>
